#. [attack], type=impact, range=ranged
#: wesnoth-A_Song_of_Fire/units/heroes-windsong/Veela_Runeforger.cfg:53
msgid "memory"
msgstr "recuerdo"

#. [attack], type=pierce, range=ranged
#: wesnoth-A_Song_of_Fire/units/heroes-windsong/Veela_Runeforger.cfg:67
msgid "death"
msgstr "muerte"

#. [attack], type=arcane, range=ranged
#: wesnoth-A_Song_of_Fire/units/heroes-windsong/Veela_Runeforger.cfg:80
#: wesnoth-A_Song_of_Fire/units/heroes-windsong/Veela_Savant.cfg:33
